    "import sys\n",
    "\n",
    "option = sys.argv[1]\n",
    "\n",
    "if option == \"-a\":\n",
    "    memo = sys.argv[2]\n",
    "    f = open(\"memo.txt\",'a')\n",
    "    f.write(memo)\n",
    "    f.write('\\n')\n",
    "    f.close()\n",
    "\n",
    "elif option == \"-v\":\n",
    "    f = open(\"memo.txt\")\n",
    "    memo = f.read()\n",
    "    f.close()\n",
    "    print(memo)"
   ]
  }
